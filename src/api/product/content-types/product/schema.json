{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Products",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "promotionTag": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::promotion-tag.promotion-tag"
    },
    "productBenefitTags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-benefit-tag.product-benefit-tag"
    },
    "slugId": {
      "type": "uid",
      "targetField": "slug",
      "required": true
    },
    "imageBgColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "offerTag": {
      "type": "component",
      "repeatable": false,
      "component": "common.product-offer-tag"
    },
    "productDetailView": {
      "type": "dynamiczone",
      "components": [
        "accordion.description-section",
        "accordion.fa-qs-section",
        "accordion.ingredients-section",
        "accordion.usage-instructions-section",
        "blocks.featured-list",
        "blocks.upsell-products"
      ]
    }
  }
}
